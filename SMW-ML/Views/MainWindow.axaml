<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SMW_ML.ViewModels;assembly=SMW_ML"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SMW_ML.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SMW_ML"
		x:Name="MainWindow">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<StackPanel Orientation="Vertical" Spacing="5" HorizontalAlignment="Center" VerticalAlignment="Center" >
		<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center"/>
		<Button Command="{Binding StartTraining}" Content="{Binding Start}" IsEnabled="{Binding !IsTrainingRunning}" HorizontalAlignment="Center"/>
		<Button Command="{Binding StopTraining}" Content="{Binding Stop}" IsEnabled="{Binding IsTrainingRunning}" HorizontalAlignment="Center"/>
		<Button Command="{Binding OpenConfigSettings}" CommandParameter="{Binding ElementName=MainWindow}" Content="{Binding OpenSettingsString}" IsEnabled="True"  HorizontalAlignment="Center" />
	</StackPanel>

</Window>
